{{#if formattedBills}}
<div class="page-container">
    <div class="container">
        
        <!-- Filter Bar -->
        <div class="filter-bar">
            <div class="row align-items-center">
                <div class="col-md-3 mb-3 mb-md-0">
                    <h3>Filter by:</h3>
                </div>
                <div class="col-md-9">
                    <div class="d-flex flex-wrap gap-3 justify-content-md-end justify-content-start">
                        <a href="/sortedbills">Highest Bill Amount to Lowest</a>
                        <a href="/creditbills">Credit Card Bills</a>
                        <a href="/personalbills">Personal Loan Bills</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bills Grid - 3 per row -->
        <div class="row g-4">
            {{#each formattedBills}}
            <div class="col-lg-4 col-md-6">
                <div class="bill-card">
                    <h2>{{this.title}}</h2>
                    <p><strong>Bill type:</strong> {{this.type}}</p>
                    <p><strong>Bill description:</strong> {{this.description}}</p>
                    <p class="amount-due">Amount due: ${{this.originalAmount}}</p>
                    <p><strong>Due by:</strong> {{this.formattedDate}}</p>
                    <a href="/bills/{{this._id}}" class="btn-update">Update bill</a>
                </div>
            </div>
            {{/each}}
        </div>

    </div>
</div>
{{else}}
<!-- Empty State -->
<div class="page-container">
    <div class="container">
        <div class="empty-state">
            <h3>No Bills Yet</h3>
            <p>There are no bills at this time. Get started by adding your first bill to track!</p>
            <a href="/bills/add" class="btn-add">Add Your First Bill</a>
        </div>
    </div>
</div>
{{/if}}

